countsTable <- read.table("/N/slate/primukh/FLAGRIPSeq/Raw_data/Unzipped_files/Results_FLAGRIP/RIPSEq_Analysis/412vs413/countstable_412vs413.txt", header = TRUE, row.names = 1)
